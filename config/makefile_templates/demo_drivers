# Include path for library headers: All library headers live in 
# the include directory which we specify with -I
AM_CPPFLAGS += -I@includedir@

# Pass mpi command and root dir into validate scripts
TESTS_ENVIRONMENT = MPI_RUN_COMMAND='@MPI_RUN_COMMAND@' OOMPH_ROOT=$(abs_top_srcdir)

# Choose self tests
if COMPARE_AGAINST_VALIDATA
  # Test script
  TESTS = validate.sh
else
  # Just run the executables
  TESTS = $(top_builddir)/bin/dummy_validate.sh
endif

# Distribute validation script and validation data
EXTRA_DIST = validate.sh validata

#Additional cleanup commands
clean-local: 
	rm -rf Validation *~
